<%- include("../partials/header") %>
		<div class="container-fluid">
			<div class="jumbotron bg-warning">
				<div class="container">
					<h1>Edit <strong><%= campground.name %></strong> Campground</h1>
				</div>
			</div>
			<div class="row cgrounds-new-form">
				<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>" required>
					</div>
					<div class="form-row">
						<div class="form-group col-6 col-md-8">
							<input type="number" class="form-control" name="campground[price][value]" value="<%= campground.price.value %>" step="0.01" required>
						</div>
						<div class="form-group col-6 col-md-4">
							<select name="campground[price][currency]" class="form-control inline-form" required>
								<option value="USD" selected>USD</option>
								<option value="JOD">JOD</option>
								<option value="EUR">EUR</option>
							</select>
						</div>
					</div>
					<div class="form-group">
						<textarea name="campground[desc]" id="cground-edit-desc" cols="30" rows="10" class="form-control" required><%= campground.desc %></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-warning">Update</button>
					</div>
				</form>
			</div>
		</div>
<%- include("../partials/footer") %>