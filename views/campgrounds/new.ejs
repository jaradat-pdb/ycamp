<%- include('../partials/header') %>
		<div class="container-fluid">
			<div class="jumbotron bg-success">
				<div class="container">
					<h1>Create a <strong>NEW</strong> Campground</h1>
				</div>
			</div>
			<div class="row cgrounds-new-form">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<input type="text" class="form-control" name="name" placeholder="Name" required>
					</div>
					<div class="form-group">
						<input type="text" class="form-control" name="image" placeholder="Image URL" required>
					</div>
					<div class="form-row">
						<div class="form-group col-6 col-md-8">
							<input type="number" class="form-control" name="value" placeholder="0.00" step="0.01" required>
						</div>
						<div class="form-group col-6 col-md-4">
							<select name="currency" class="form-control inline-form" required>
								<option value="USD" selected>USD</option>
								<option value="JOD">JOD</option>
								<option value="EUR">EUR</option>
							</select>
						</div>
					</div>
					<div class="form-group">
						<textarea name="desc" id="cground-new-desc" cols="30" rows="10" class="form-control" placeholder="Description" required></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-warning">Submit</button>
					</div>
				</form>
			</div>
		</div>
<%- include('../partials/footer') %>