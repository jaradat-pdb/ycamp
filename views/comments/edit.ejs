<%- include("../partials/header") %>
		<div class="container-fluid">
			<div class="jumbotron bg-warning">
				<div class="container">
					<h1>Edit an <strong>EXISTING</strong> Comment for <em><%= campground.name %></em></h1>
				</div>
			</div>
			<div class="row cgrounds-new-form">
				<form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<textarea name="comment[text]" cols="30" rows="10" class="form-control" required="required"><%= comment.text %></textarea>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-warning">Submit</button>
					</div>
				</form>
			</div>
		</div>
<%- include("../partials/footer") %>